<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="linhtinh.sea.mh.linhtinh.MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/txt_result"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/btn_undo"
            android:layout_margin="50dp"
            android:background="#00DDDDDD" />

        <Button
            android:id="@+id/btn_cap"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="50dp"
            android:layout_marginRight="50dp"
            android:text="Capture"
            android:textSize="25sp" />

        <linhtinh.sea.mh.linhtinh.View.DrawView
            android:layout_width="400dp"
            android:layout_height="400dp"
            android:background="#DDDDDD"
            android:clickable="true"
            android:foreground="@drawable/ripple_circle"></linhtinh.sea.mh.linhtinh.View.DrawView>

        <ScrollView
            android:layout_width="1080px"
            android:layout_height="1200px"
            android:background="#AAAAAA">

            <LinearLayout
                android:id="@+id/lnl_view"
                android:layout_width="1080px"
                android:layout_height="wrap_content"
                android:background="#AAAAAA"
                android:orientation="vertical">

            </LinearLayout>
        </ScrollView>


        <AutoCompleteTextView
            android:id="@+id/txt_auto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="50dp" />
    </RelativeLayout>
</android.support.constraint.ConstraintLayout>

